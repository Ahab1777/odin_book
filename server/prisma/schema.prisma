//Enums
enum FriendRequestStatus {
  PENDING // Request sent, waiting for receiver to act
  ACCEPTED // Receiver accepted; app should create Friend row(s)
  REJECTED // Receiver rejected
  CANCELED // Requester canceled before receiver responded
}

enum UserClasses {
  NORMAL
  ADMIN
  DEMO
}

//Models
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String          @id @default(cuid())
  username            String          @unique
  email               String          @unique
  emailNormalized     String          @unique
  password            String
  class               UserClasses     @default(NORMAL)
  posts               Post[]
  comments            Comment[]
  friendshipsAsUser1  Friendship[]    @relation("FriendshipUser1")
  friendshipsAsUser2  Friendship[]    @relation("FriendshipUser2")
  likes               Like[]
  profile             Profile?
  sentRequests        FriendRequest[] @relation("sentRequests")
  receivedRequests    FriendRequest[] @relation("receivedRequests")
  passwordResetTokens PasswordReset[]

  @@map("users")
}

model PasswordReset {
  id        String    @id @default(uuid())
  tokenHash String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@map("password_reset")
}

model Friendship {
  id      String @id @default(cuid())
  user1Id String
  user2Id String

  user1 User @relation("FriendshipUser1", fields: [user1Id], references: [id], onDelete: Cascade)
  user2 User @relation("FriendshipUser2", fields: [user2Id], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  // one row per unordered pair
  @@unique([user1Id, user2Id])
  @@map("friends")
}

model FriendRequest {
  id String @id @default(cuid())

  requesterId String
  receiverId  String

  requester User @relation("sentRequests", fields: [requesterId], references: [id], onDelete: Cascade)
  receiver  User @relation("receivedRequests", fields: [receiverId], references: [id], onDelete: Cascade)

  status FriendRequestStatus @default(PENDING)

  createdAt   DateTime  @default(now())
  respondedAt DateTime? // Set when status becomes ACCEPTED / REJECTED / CANCELED

  // Ensure only one request per pair in a given direction.
  // Application logic should prevent creating a new PENDING request if a
  // previous one is still active or a Friend already exists.
  @@unique([requesterId, receiverId])
  @@map("friend_requests")
}

model Post {
  id        String    @id @default(cuid())
  userId    String
  title     String
  content   String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments  Comment[]
  likes     Like[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("posts")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  userId    String
  postId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("comments")
}

model Profile {
  id     String  @id @default(cuid())
  userId String  @unique
  bio    String?
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, postId]) // Prevent duplicate likes from same user
  @@map("likes")
}
